{
    "manifest_version": 2,
    "name": "MP Improvements",
    "version": "0.5.9",
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": ["https://app.mediaportal.com/*", "https://*.mediaportal.com/*", "https://mick666.github.io/SummsLinker/", "https://docs.google.com/*"],
            "js": ["content.js"]
        }
    ],
    "permissions": [
        "clipboardWrite", "clipboardRead", "storage", "tabs"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "persistent": false,
        "page": "background.html"
    },
    "commands": {
        "1_paste" : {
            "suggested_key": {
                "default": "Ctrl+Shift+A"
            },
            "description": "Copy without linebreaks"
        },
        "2_abc": {
            "suggested_key": {
                "default": "Ctrl+Shift+Q"
            },
            "description": "Copy without ABC's Key Points"
        },
        "static-text-1": {
            "description": "Static text #1"
        },
        "static-text-2" : {
            "description": "Static text #2"
        },
        "static-text-3": {
            "description": "Static text #3"
        },
        "static-text-4": {
            "description": "Static text #4"
        },
        "static-text-5": {
            "description": "Static text #5"
        },
        "static-text-6": {
            "description": "Static text #6"
        },
        "static-text-7": {
            "description": "Static text #7"
        },
        "static-text-8": {
            "description": "Static text #8"
        },
        "static-text-9": {
            "description": "Static text #9"
        },
        "t_static-text-10": {
            "description": "Static text #10"
        },
        "highlightBroadcast": {
            "suggested_key": {
                "default": "Alt+Q"
            },
            "description": "Highlight broadcast items which need recapping"
        },
        "highlightPreviewWords": {
            "suggested_key": {
                "default": "Alt+W",
                "mac": "Command+Shift+Y"
            },
            "description": "Highlight possible mistakes in checking"
        },
        "copyIDs": {
            "description": "Copy all visible items to the clipboard"
        },
        "openLinks": {
            "description": "Open all saved links & copy them to the clipboard"
        },
        "addLink": {
            "description": "Saves a link from your clipboard for later use"
        },
        "saveID": {
            "description": "Saves a highlighted Item ID"
        },
        "copyID": {
            "description": "Copies all item IDs to your clipboard"
        },
        "deleteIDs": {
            "description": "Removes all saved IDs"
        }
    }
}