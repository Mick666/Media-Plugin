{
    "manifest_version": 2,
    "name": "MP Improvements",
    "version": "0.3",
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": ["https://app.mediaportal.com/*", "https://*.mediaportal.com/*"],
            "js": ["content.js"]
        }
    ],
    "permissions": [
        "clipboardWrite", "clipboardRead", "storage"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "persistent": false,
        "page": "background.html"
    },
    "commands": {
        "1_paste" : {
            "suggested_key": {
                "default": "Ctrl+Shift+Z"
            },
            "description": "Copy without linebreaks"
        },
        "2_abc": {
            "suggested_key": {
                "default": "Ctrl+Shift+Q"
            },
            "description": "Copy without ABC's Key Points"
        },
        "static-text-1": {
            "suggested_key": {
                "default": "Alt+Shift+Q",
                "mac": "Command+Shift+Y"
            },
            "description": "Static text #1"
        },
        "static-text-2" : {
            "suggested_key": {
                "default": "Alt+Shift+W"
            },
            "description": "Static text #2"
        },
        "static-text-3": {
            "description": "Static text #3"
        },
        "static-text-4": {
            "description": "Static text #4"
        },
        "static-text-5": {
            "description": "Static text #5"
        }
    }
}